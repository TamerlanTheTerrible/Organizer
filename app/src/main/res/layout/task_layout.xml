<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtTask"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtTask"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/txtTask"
        android:layout_alignStart="@+id/txtTask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Содержимое:"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/edtTask"
        android:layout_toStartOf="@+id/edtTask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начало:"
        android:id="@+id/textView7"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView6"
        android:layout_toStartOf="@+id/edtTask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Окончание:"
        android:id="@+id/textView8"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="date date date"
        android:id="@+id/txtFromDate"
        android:layout_marginStart="31dp"
        android:background="@color/material_grey_300"
        android:textColor="@color/material_grey_900"
        android:gravity="center"
        android:padding="5dp"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="date date date"
        android:id="@+id/txtToDate"
        android:background="@color/material_grey_300"
        android:textColor="@color/material_grey_900"
        android:gravity="center"
        android:padding="5dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/txtFromDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать"
        android:id="@+id/btnAdd"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отменить"
        android:id="@+id/btnCancel"
        android:layout_alignTop="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnAdd" />

</RelativeLayout>